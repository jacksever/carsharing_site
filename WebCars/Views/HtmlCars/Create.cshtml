@model Cars.Entities.Car

@{
	ViewData["Title"] = "Добавление новой машины";
}

	<h1>Добавление новой машины</h1>

<h4>Автомобиль</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label>Тип автомобиля (пассажирский, грузовой)</label>
				<input asp-for="Type" class="form-control" />
			</div>
			<div class="form-group">
				<label>Производитель</label>
				<input asp-for="Make" class="form-control" />
			</div>
			<div class="form-group">
				<label>Модель</label>
				<input asp-for="Model" class="form-control" />
			</div>
			<div class="form-group">
				<label>Состояние (свободен, занят)</label>
				<input asp-for="State" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Добавить" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="Index">Вернуться к списку</a>
</div>