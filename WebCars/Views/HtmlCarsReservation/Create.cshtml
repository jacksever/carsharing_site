@model Cars.Entities.CarsReservation

@{
	ViewData["Title"] = "Добавление автомобиля в аренду";
}

	<h1>Добавление автомобиля в аренду</h1>

<h4>Booking cars</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label>Id автомобиля</label>
				<input asp-for="Car.Id" class="form-control" />
			</div>
			<div class="form-group">
				<label>Конечный пункт</label>
				<input asp-for="Destination" class="form-control" />
			</div>
			<div class="form-group">
				<label>Дистанция</label>
				<input asp-for="Distance" class="form-control" />
			</div>
			<div class="form-group">
				<label>Оплата</label>
				<input asp-for="Pay" class="form-control" />
			</div>
			<div class="form-group">
				<label>Id пользователя</label>
				<input asp-for="User.Id" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Добавить" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="Index">Вернуться к списку</a>
</div>