@model IEnumerable<Cars.Entities.Car>

@{
    ViewData["Title"] = "Главная - список книг";
}


    <h1>Список книг</h1>

    <p>
        <a asp-action="Create">Создать новую книгу</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Автор
                </th>
                <th>
                    Страниц
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Обновить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>