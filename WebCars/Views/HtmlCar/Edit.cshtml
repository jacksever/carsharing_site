@model Cars.Entities.Car

@{
    ViewData["Title"] = "Обновление книги";
}


    <h1>Обновление книги</h1>

<h4>Книга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(p=>p.Id)
            <div class="form-group">
                <label>Название</label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div class="form-group">
                <label>Страниц</label>
                <input asp-for="Make" class="form-control" />
            </div>
            <div class="form-group">
                <p>Тут поидее выбор автора, но мы упростим - введем id</p>
                <label>Model</label>
                <input asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>